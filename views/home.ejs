    <body>
    <section class="container1">
    <section class="container">
        <h3  align="center">TODO APP</h3>

            <!-- form to create task -->
        <form action="/create-task" method="POST">

            <table class="table">
                <thead>
                  <tr class="table-active">
                    <th >Add Task</th>
                    <th >Category</th>
                    <th >Date</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                    <tr>
                      <td> <input type="text" name="description"placeholder="what do you need to do ?" required></input></th>
                      <th> <select name="category">
                         <option>     </option>
                        <option>PERSONAL</option>
                        <option>WORK</option>
                        <option>SCHOOL</option>
                        <option>SHOPPING LIST</option>
                        <option>OTHER</option>
                      </select></th>

                      <label for="categoryFilter">Filter by Category:</label>


                      <td > <input type="date" name="date" id="date"></td>
                      
                      <td ><input type="submit"  class="btn btn-success"id="add" value="ADD TASK"></td>
                      <!-- <td><input type="submit" class="btn btn-danger" id="delete" value="DELETE TASK"></td> -->
                    </tr>
                </tbody>

            </table>
            <!-- <div align = "center"><input type="submit" class="btn-danger" value="ADD TASK"></div>
            <div  align = "center"><input type="submit" class="btn btn-danger" value="DELETE TASK"></div> -->

        </form>
      </section>
      <section class="container">
        <div>          
                <h3 align="center">TASKS LIST</h3>
                <form action="/delete-task" method="GET">
                    <table class="table">
                        <thead>
                            <tr class="table-active">
                              <th>Select</th>
                              <th>Task</th>
                              <th>Category</th>
                              <th>Due date</th>
                              
                            </tr>
                          </thead>
                        
                          <% for(let i of task) { %> 
                        <tr>
                               <td> <input type="checkbox" name="<%= i._id %>"></td>
                               <td> <p id="task-description"><%= i.description %></td>
                                <% if (i.category) { %>
                                <td><p id="task-category"><%= i.category %></td>
                                <% } else { %>
                                <td><p id="task-category">--</p></td>
                                <% } %>
                                <% if (i.date) { %>
                                  <td><p id="due-date"> <%= i.date.toDateString() %></p></td>
                                  <% } else { %>
                                  <td><p id="due-date">No Deadline</p></td>
                                  <% } %>
                                  <!--<% if (i.time) { %>
                                  <td><p id="task-time"> <%= i.time %></p></td>
                                  <% } else { %>
                                  <td><p id="task-time">No Limit</p></td>
                                  <% } %>-->
                                  </tr>
                                  <% } %>
                        </tr>    
                  </table>
                  <div  align = "center"><input type="submit" class="btn btn-danger" value="DELETE TASK"></div>
                </form>
        </div>
      </section>
    </section>
    </body>

</html>

